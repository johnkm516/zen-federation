generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/.prisma/Auth-client"
  previewFeatures = ["extendedWhereUnique"]
}

datasource db {
  provider = "postgresql"
  // DB URL is provided in /app/prisma/prisma.service.ts which uses nest config module to get the URL during runtime. 
  // The URL changes between production and dev.
  url = "placeholder-because-prisma-complains"
}

model User {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  username      String?  @unique
  password      String?
  email         String   @unique
  roles         String[]
  googleId      String?  @unique
  googleProfile Json?
}
